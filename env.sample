# True for development, False for production
DEBUG=True

# Flask ENV
FLASK_APP=run.py
SECRET_KEY=YOUR_SUPER_KEY

# Used for CDN (in production)
# No Slash at the end
ASSETS_ROOT=/static/assets

# Application and Docker config
APP_NAME=cruzamento_dados

# Database Configuration (MySQL)
# DB_PASS (Flask) e DB_PASSWORD (Docker) usam a MESMA senha
DB_ENGINE=mysql
DB_NAME=cruzamento_dados_db
DB_HOST=mysql
DB_PORT=3306
DB_USERNAME=cruzamento_user
DB_PASS=sua_senha_super_secreta_aqui
DB_PASSWORD=sua_senha_super_secreta_aqui
DB_DATABASE=cruzamento_dados_db
FORWARD_DB_PORT=3306

# SOCIAL AUTH Github
# GITHUB_ID=YOUR_GITHUB_ID
# GITHUB_SECRET=YOUR_GITHUB_SECRET

# Portal da Transparência (CGU)
# Solicite em: https://portaldatransparencia.gov.br/api-de-dados
# TRANSPARENCIA_API_KEY=SUA_CHAVE_AQUI

# CEIS local (opcional). Se não definir, usa ../data/raw/ceis.csv automaticamente.
# CEIS_CSV=/caminho/absoluto/para/ceis.csv
